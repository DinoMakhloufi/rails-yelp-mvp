<div class="container">

<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<p><% @restaurant.reviews.each do |review| %></p>
<p><%= review.rating %></p>
<p><%= review.content %></p>
<p><% end %></p>

<p><%= link_to 'Go back to list', restaurants_path, class: "btn btn-primary" %></p>
<p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%></p>

</div>
