<div class="container mt-5 col-6 offset-3">
  <h1>Add a restaurant</h1>
  <%= simple_form_for(restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.submit 'Add a restaurant', class: 'btn btn-primary' %>
  <% end %>
</div>
